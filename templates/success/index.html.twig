{% extends 'base.html.twig' %}

{% block title %}Affichage des données du formulaire{% endblock %}

{% block body %}

<h3 class="text-center m-3">Affichage des données du formulaire</h3>

<a href="{{ path('main') }}" class="btn btn-small btn-info m-2">Retour</a>


<form>
  <div class="form-group">
    <label for="firstname">Votre prénom :</label>
    <input type="text" class="form-control" name="firstname"  value="{{data.firstname}}" readonly>    
  </div>

  <div class="form-group">
    <label for="name">Votre nom :</label>
    <input type="text" class="form-control" name="name"   value="{{data.lastname}}" readonly>    
  </div>

  <div class="form-group">
    <label for="email">Votre addresse email :</label>
    <input type="text" class="form-control" name="email"   value="{{data.email}}" readonly>    
  </div>

  <div class="form-group">
    <label for="phone">Votre numéro de téléphone :</label>
    <input type="number" class="form-control" name="phone"   value="{{data.phone}}" readonly>    
  </div>

  <div class="form-group">
    <label for="address">Votre adresse :</label>
    <input type="text" class="form-control" name="address"   value="{{data.address}}" readonly>    
  </div>

  <div class="form-group">
    <label for="country">Votre pays :</label>
    <input type="text" class="form-control" name="country"   value="{{data.country}}" readonly>    
  </div>

  
  
 
</form>

{% endblock %}
